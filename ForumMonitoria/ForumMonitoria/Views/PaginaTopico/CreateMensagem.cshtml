@model  Mensagem
@{
    ViewData["Title"] = "CreateMensagem";
}

<h4>@ViewBag.NomeTopico</h4>
<h2>Nova Mensagem</h2>

<div class="container">
    <div class="row">
        <div class="col">
            <form asp-action="CreateMensagem">
                <div class="row form-group">
                    <label asp-for="Texto" class="control-label"></label>
                    <textarea asp-for="Texto" class="form-control">
                    </textarea>
                    <input type="hidden" name="TopicoID" value="@ViewBag.IDTopico" />
                    <span asp-validation-for="Texto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Voltar</a>
    </div>
</div>
